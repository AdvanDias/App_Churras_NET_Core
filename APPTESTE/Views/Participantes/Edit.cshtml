@model APPTESTE.Models.Participante

@{
    ViewData["Title"] = "Edit";
}

<h1 style="color:#ffffff;">Participante</h1>

<hr />
<div class="col-md-4">
    <form asp-action="Edit" class="edite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="V_Com" class="control-label"></label>
            <select asp-for="V_Com" class="form-control">
                <option>20</option>
                <option>10</option>
            </select>

            <span asp-validation-for="V_Com" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ChurrascoId" class="control-label"></label>
            <select asp-for="ChurrascoId" class="form-control" asp-items="ViewBag.ChurrascoId"></select>
            <span asp-validation-for="ChurrascoId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
            <a class="btn btn-secondary" style="float:right;" asp-action="Index">Voltar</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
